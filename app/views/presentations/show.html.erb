<div class="reveal">
  <div class="slides">
    <span class="header"><%= "Cook Time: #{@recipe.cook_time} Prep Time: #{@recipe.prep_time}" %></span>
    <script type="text/javascript"></script>
    <span id="recipe" data-id='<%= @recipe.id %>'></span>
    <section>
      <% if @recipe.image.present? %>
        <%= image_tag @recipe.image.url(:medium), class: "grow" %>
      <% end %>
      <h1><%= @recipe.title %></h1>
    </section>
    <section>
      <p id="description"><%= @recipe.description %></p>
    </section>
    <section id="ingredients">
      <h3>Ingredients</h3>
      <ul>
        <% @recipe.includings.each do |including|  %>
        <li class="list-group-item"><%= "#{including.amount % 1 == 0.0 ? including.amount.to_i : Rational(including.amount)}
                #{including.measure_type} #{including.ingredient.name}" %>
        </li>

        <% end %>
      </ul>
    </section>
    <% counter = 1 %>
    <% @recipe.steps.each do |step|  %>
      <section>
        <h3>Directions</h3>
        <span class="step" data-id='<%= "step#{counter}" %>'>
          <b> <%= "Step #{counter} of #{@recipe.steps.count}" %></b>
        </span>
        <p id="step<%=counter%>" style="text-align:left;"> <%= step.body %></p>
        <% counter += 1 %>
      </section>
    <% end %>
  </div>
</div>
<script>
  Reveal.initialize({
    slideNumber: 'c/t',
    transition: 'convex'
  });
</script>
