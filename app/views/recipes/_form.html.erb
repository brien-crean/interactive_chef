<div class="col-md-6 form-group">
  <%= simple_form_for @recipe do |f|%>
    <%= f.input :title %>
    <%= f.input :description %>
    <div class="form-inline">
      <%= f.input :cook_time %>
      <%= f.input :prep_time %>
    </div>
</div>
    <%= f.input :image %>
<div class="col-md-12"></div>
<hr>
<div class="col-md-6">
  <b>Steps:</b>
    <%= f.simple_fields_for :steps do |r| %>
      <%= render "step_fields", f: r %>
    <% end  %>
</div>

<div class="col-md-6">
  <b>Ingredients:</b>
    <%= f.simple_fields_for :includings do |r| %>
      <%= r.input :amount, class: "form-control col-md-2" %>
      <%= r.input :measure_type, class: "form-control col-md-2" %>
      <%= r.association :ingredient %>
      <!-- <%= r.simple_fields_for :ingredients do |i| %>
        <%= i.input :name, class: "form-control" %>
      <% end  %> -->
    <% end  %>
</div>

<div class="form-group col-md-12">
  <%= f.submit %>
</div>
  <% end %>
